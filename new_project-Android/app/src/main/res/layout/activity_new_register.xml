<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".Register">


    <ImageView
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/Newregister_image"
        android:contentDescription="@null"
        android:src="@drawable/logo" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/Newregister_image"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:id="@+id/Newregister_Name"
        android:inputType="text"
        android:paddingBottom="10dp"
        android:background="@drawable/round_background"
        android:hint="Name"
        android:maxLines="1"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:id="@+id/Newregister_NameCheck"
        android:layout_alignTop="@id/Newregister_Name"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_background_v2"
        android:text="중복 체크"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginRight="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/Newregister_Name"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:id="@+id/Newregister_ID"
        android:inputType="text"
        android:paddingBottom="10dp"
        android:background="@drawable/round_background"
        android:hint="ID"
        android:maxLines="1"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/Newregister_ID"
        android:paddingRight="20dp"
        android:layout_marginTop="25dp"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:id="@+id/Newregister_pwd"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:background="@drawable/round_background"
        android:hint="Pwd"
        android:paddingLeft="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_below="@id/Newregister_pwd"
        android:paddingRight="20dp"
        android:layout_marginTop="25dp"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:textSize="18sp"
        android:id="@+id/Newregister_pwd2"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:background="@drawable/round_background"
        android:hint="RePwd"
        android:paddingLeft="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호가 맞지 않습니다."
        android:id="@+id/Newregister_pwderror"
        android:layout_below="@id/Newregister_pwd2"
        android:layout_alignRight="@id/Newregister_pwd2"
       android:visibility="gone"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/round_background_v2"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:id="@+id/Newregister_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/Newregister_pwd2"
        android:text="등록"
        />
</RelativeLayout>