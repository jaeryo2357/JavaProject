<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#555fddff"
        android:id="@+id/cardview"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_image"
                android:src="@drawable/webtoon_test"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardview_image"
                android:id="@+id/cardview_title"
                android:layout_marginTop="10dp"
                android:text="신의탑"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"

                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정영호"
                android:textSize="14sp"
                android:id="@+id/cardview_byname"
                android:textStyle="bold"
                android:layout_alignTop="@id/cardview_title"
                android:layout_toRightOf="@id/cardview_title"
                android:layout_marginLeft="25dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:id="@+id/cardview_time"
                android:layout_alignTop="@id/cardview_title"
                android:text="2018.11.06"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>